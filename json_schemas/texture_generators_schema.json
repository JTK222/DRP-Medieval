{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MARG - Texture Generator",
  "type": "object",
  "description": "//TODO",
  "properties": {
    "version": {
      "type": "integer",
      "description": "The version of this generator, should be increased by 1 every time changes were made"
    },
    "type": {
      "type": "string",
      "description": "The material type used for this Generator e.g. wood"
    },
    "required_textures": {
      "type": "array",
      "description": "//TODO",
      "items": {
        "type": "string",
        "uniqueItems": true
      },
      "minItems": 1
    },
    "textures": {
      "type": "array",
      "description": "//TODO",
      "items": {
        "type": "object",
        "proeprties": {
          "base": {
            "anyOf": [
              {
                "type": "integer",
                "description": ""
              },
              {
                "type": "string",
                "description": ""
              }
            ]
          },
          "manipulations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "description": "",
                  "enum": ["mask", "overlay", "rotate", "flip"]
                },
                "textures": {
                  "type": "integer",
                  "description": ""
                },
                "cached_texture": {
                  "type": "integer",
                  "description": ""
                }
              },
              "required": [
                "type"
              ]
            }
          }
        },
        "required": [
          "base"
        ]
      },
      "minItems": 1
    }
  },
  "required": [
    "version", "type", "textures"
  ]
}